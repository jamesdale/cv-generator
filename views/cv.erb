<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>CURRICULUM VITAE - <%= cv[:name] %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/application.css" rel="stylesheet">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="container-narrow">

      <div class="masthead">
        <h4>
          CURRICULUM VITAE <br>
          <%= cv[:name] %>
        </h4>
        <address>
        <%= cv[:address] %> <br>
        <%= cv[:phone] %> <br>
        <a href="mailto:#"><%= cv[:email] %></a>
        </address>
      </div>

      <hr>

        <h4>Employment History</h4>
        <% cv[:experience].each do |e| %>
          <div class="span12 job" style="page-break-inside:avoid">
            <strong><%= e[:title] %></strong>, <%= e[:company] %>, <span class="text-muted"><%= e[:start] %> - <%= e[:end] %></span>
              <p><%= e[:blurb] %></p>

              <% unless e[:improvements].nil? %>
                <ul>
                <% for i in e[:improvements] do %>
                <li><%= i %></li>
                <% end %>
                </ul>
              <% end %>
          </div>
          <div class="span12 job" style="page-break-inside:avoid">
              <% unless e[:responsibilities].nil? %>
              <p><%= e[:responsibilities_preamble] %></p>
              <ul>
              <% for r in e[:responsibilities] do %>
              <li><%= r %></li>
              <% end %>
              </ul>
              <% end %>
          </div>
        <% end %>
        <br>

      <div class="row-fluid">
        <h4>Technology Experience</h4>
        <p class="noprint">
        <% cv[:technologies].each_with_index do |t, i| %>
          <a class="text-info" style="white-space:nowrap" href="<%= t.values[0] %>"><%= t.keys[0] %></a>
          <%= '&middot;' if i < cv[:technologies].length - 1 %>
        <% end %>
        </p>

      </div>

      <div class="row-fluid">
        <h4>Certifications</h4>
        <ul>
        <% cv[:certifications].each do |c| %>
          <li><%= c[:title] %>, <span class='text-muted'><%= c[:institution] %>, <%= c[:date] %></span></li>
        <% end %>
        </ul>
      </div>

      <div class="row-fluid">
        <h4>Courses</h4>
        <ul>
        <% cv[:courses].each do |c| %>
          <li><%= c[:title] %>, <span class='text-muted'><%= c[:institution] %>, <%= c[:date] %></span></li>
        <% end %>
        </ul>
      </div>

      <div class="row-fluid">
        <h4>Education</h4>
        <ul>
        <% cv[:education].each do |e| %>
          <li><%= e[:title] %>, <span class='text-muted'><%= e[:institution] %>, <%= e[:date] %></span></li>
        <% end %>
        </ul>
      </div>

      <div class="row-fluid" style="page-break-inside:avoid">
        <h4>Interests</h4>
        <p>
        <strong>Professional</strong>
        <% cv[:interests][:professional].each_with_index do |p, u| %>
          <% if p.values[0].nil? %>
          <%= p.keys[0] %>
          <% else %>
          <%= p.keys[0] %> <a class="text-info" style="white-space:nowrap" href="<%= p.values[0] %>">(link)</a>
          <% end %>
          <%= '&middot;' if u < cv[:interests][:professional].length - 1 %>
        <% end %>
        </p>
        <p>
        <strong>Personal</strong>
        <% cv[:interests][:personal].each_with_index do |p, u| %>
          <% if p.values[0].nil? %>
          <%= p.keys[0] %>
          <% else %>
          <%= p.keys[0] %> <a class="text-info" style="white-space:nowrap" href="<%= p.values[0] %>">(link)</a>
          <% end %>
          <%= '&middot;' if u < cv[:interests][:personal].length - 1 %>
        <% end %>
        </p>
      </div>



      </div>

    </div>

    <script src="/js/bootstrap.min.js"></script>

  </body>
</html>
